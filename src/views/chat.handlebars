<div class="container">
    <div id="userBox" class="mt-4">
        <h4>Para continuar, por favor ingrese su nombre de usuario:</h4>
        <div class="form-group">
            <input name="user" id="user" class="form-control" placeholder="Ingrese su nombre de usuario" type="text">
            <button type="button" id="btnUserConfirm" class="btn btn-primary">Confirmar</button>
        </div>
    </div>
    <div id="chatInterface" style="display: none;" class="mt-4">
        <h3 id="userGreeting"></h3>
        <div id="messageContainer"></div>
        <div class="form-group">
            <input name="message" id="message" class="form-control" placeholder="Escribe tu mensaje" type="text">
            <button type="button" id="btnSend" class="btn btn-primary">Enviar</button>
        </div>
        <button type="button" id="btnExit" class="btn btn-danger">Salir</button>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>
